<UserControl
    x:Class="XamlTest.Xaml.Counter.CounterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:XamlTest.Xaml.Counter">

    <StackPanel Orientation="Vertical">
        
        <TextBlock FontSize="14">Current count: <Run Text="{Binding CurrentCount}"/></TextBlock>
        
        <Button Content="Increment Count"
                Click="ButtonIncrementCount_Click"
                Margin="0,20,0,0"
                FontSize="14"
                HorizontalAlignment="Left"/>

    </StackPanel>
</UserControl>
